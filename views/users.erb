<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr >
      <th><strong>ID</strong></th>
      <th><strong>Name</strong></th>
      <th><strong>Email</strong></th>
      <th><strong>Date Joined</strong></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td>
        <%= user[:id] %>
      </td>
      <td >
        <%= user[:name] %>
      </td>
      <td >
        <%= user[:email] %>
      </td>
      <td >
        <%= user[:date_joined] %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
