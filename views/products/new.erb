<h3>Form to create new Product</h3>
<form action="/products" method="post">
  <div class="form-group">
    <label for="name">New Product Name:</label>
    <input id="name" type="text" name="product[name]" value="" required>
  </div>
  <div class="form-group">
    <label> Brand Id
      <input type="text" name="product[brand_id]" value="" required>
    </label>
  </div>
  <div class="form-group">
    <label> Category Id
      <input type="text" name="product[category_id]" value="" required="">
    </label>
  </div>
  <div class="form-group">
    <label> Price
      <input type="text" name="product[price]" value="" required="">
    </label>
  </div>
  <input type="submit" name="name" value="submit">
</form>
